{
    "id": "payment",
    "name": "Payment Management",
    "version": "1.0.0",
    "description": "Payment processing including top-up, withdrawal, and transfer services",
    "type": "core-plugin",
    "author": "Closepay Team",
    "dependencies": [
        "balance"
    ],
    "exports": {
        "components": [
            "TopUpScreen",
            "VirtualAccountScreen",
            "WithdrawScreen",
            "WithdrawSuccessScreen",
            "TopUpMemberScreen",
            "TopUpMemberSummaryScreen",
            "TopUpMemberPinScreen",
            "TopUpMemberSuccessScreen",
            "TransferMemberScreen",
            "TransferMemberSuccessScreen",
            "TapKartuSummaryScreen",
            "VirtualCardTopUpAmountScreen",
            "QrScreen",
            "EditQuickAmountScreen",
            "PinInput",
            "WithdrawConfirmModal",
            "AutoWithdrawModal"
        ],
        "services": [
            "paymentService",
            "topUpService",
            "withdrawService",
            "transferService",
            "cardTransactionService"
        ],
        "screens": {
            "TopUp": "TopUpScreen",
            "VirtualAccount": "VirtualAccountScreen",
            "Withdraw": "WithdrawScreen",
            "WithdrawSuccess": "WithdrawSuccessScreen",
            "TopUpMember": "TopUpMemberScreen",
            "TopUpMemberSummary": "TopUpMemberSummaryScreen",
            "TopUpMemberPin": "TopUpMemberPinScreen",
            "TopUpMemberSuccess": "TopUpMemberSuccessScreen",
            "TransferMember": "TransferMemberScreen",
            "TransferMemberSuccess": "TransferMemberSuccessScreen",
            "TapKartuSummary": "TapKartuSummaryScreen",
            "VirtualCardTopUpAmount": "VirtualCardTopUpAmountScreen",
            "Qr": "QrScreen",
            "EditQuickAmount": "EditQuickAmountScreen"
        },
        "tabs": {
            "payment": "PaymentTab",
            "pembayaran": "PaymentTab",
            "payment-qris": "PaymentQrisTab",
            "bayar-qris": "PaymentQrisTab",
            "payment-transfer": "PaymentTransferTab",
            "bayar-transfer": "PaymentTransferTab",
            "payment-va": "PaymentVATab",
            "bayar-va": "PaymentVATab",
            "payment-bank": "PaymentBankTab",
            "bayar-bank": "PaymentBankTab",
            "payment-member": "PaymentMemberTab",
            "bayar-member": "PaymentMemberTab"
        }
    },
    "routes": [
        {
            "name": "TopUp",
            "path": "/payment/topup",
            "component": "TopUpScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Top Up Balance",
                "showInMenu": true
            }
        },
        {
            "name": "VirtualAccount",
            "path": "/payment/virtual-account",
            "component": "VirtualAccountScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Virtual Account",
                "showInMenu": false
            }
        },
        {
            "name": "Withdraw",
            "path": "/payment/withdraw",
            "component": "WithdrawScreen",
            "permissions": [
                "payment:withdraw"
            ],
            "meta": {
                "title": "Withdraw Funds",
                "showInMenu": false
            }
        },
        {
            "name": "WithdrawSuccess",
            "path": "/payment/withdraw/success",
            "component": "WithdrawSuccessScreen",
            "permissions": [
                "payment:withdraw"
            ],
            "meta": {
                "title": "Withdrawal Successful",
                "showInMenu": false
            }
        },
        {
            "name": "TopUpMember",
            "path": "/payment/topup-member",
            "component": "TopUpMemberScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Top Up Saldo Member",
                "showInMenu": true,
                "icon": "topup"
            }
        },
        {
            "name": "TopUpMemberSummary",
            "path": "/payment/topup-member/summary",
            "component": "TopUpMemberSummaryScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Ringkasan Top Up Member",
                "showInMenu": false
            }
        },
        {
            "name": "TopUpMemberPin",
            "path": "/payment/topup-member/pin",
            "component": "TopUpMemberPinScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Masukkan PIN",
                "showInMenu": false
            }
        },
        {
            "name": "TopUpMemberSuccess",
            "path": "/payment/topup-member/success",
            "component": "TopUpMemberSuccessScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Top Up Member Berhasil",
                "showInMenu": false
            }
        },
        {
            "name": "TransferMember",
            "path": "/payment/transfer-member",
            "component": "TransferMemberScreen",
            "permissions": [
                "payment:transfer"
            ],
            "meta": {
                "title": "Transfer Member",
                "showInMenu": true,
                "icon": "guest"
            }
        },
        {
            "name": "TransferMemberSuccess",
            "path": "/payment/transfer-member/success",
            "component": "TransferMemberSuccessScreen",
            "permissions": [
                "payment:transfer"
            ],
            "meta": {
                "title": "Transfer Member Berhasil",
                "showInMenu": false
            }
        },
        {
            "name": "TapKartuSummary",
            "path": "/payment/tap-kartu/summary",
            "component": "TapKartuSummaryScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Tap Kartu Summary",
                "showInMenu": false
            }
        },
        {
            "name": "VirtualCardTopUpAmount",
            "path": "/payment/virtual-card-topup",
            "component": "VirtualCardTopUpAmountScreen",
            "permissions": [
                "payment:topup"
            ],
            "meta": {
                "title": "Top Up Kartu Virtual",
                "showInMenu": false
            }
        },
        {
            "name": "Qr",
            "path": "/payment/qr",
            "component": "QrScreen",
            "permissions": [
                "payment:qr"
            ],
            "meta": {
                "title": "QR Code",
                "showInMenu": false
            }
        },
        {
            "name": "EditQuickAmount",
            "path": "/payment/qr/edit-quick-amount",
            "component": "EditQuickAmountScreen",
            "permissions": [
                "payment:qr"
            ],
            "meta": {
                "title": "Edit Quick Amount",
                "showInMenu": false
            }
        }
    ],
    "permissions": [
        "payment:topup",
        "payment:withdraw",
        "payment:transfer"
    ],
    "config": {
        "minTopUp": 10000,
        "maxTopUp": 10000000,
        "minWithdraw": 10000,
        "maxWithdraw": 100000000,
        "withdrawalFee": 2500
    }
}